<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="TextView">
        <attr name="hahaText" format="string"></attr>
        <attr name="hahaTextColor" format="color"></attr>
        <attr name="hahaTextSize" format="dimension"></attr>
        <attr name="hahaMaxLength" format="integer"></attr>
        <attr name="inputType">
            <enum name="number" value="1"></enum>
            <enum name="text" value="2"></enum>
            <enum name="password" value="3"></enum>
        </attr>
    </declare-styleable>

    <declare-styleable name="StepView">
        <attr name="outerColor" format="color"></attr>
        <attr name="innerColor" format="color"></attr>
        <attr name="borderWidth" format="dimension"></attr>
        <attr name="stepTextSize" format="dimension"></attr>
        <attr name="stepTextColor" format="color"></attr>
    </declare-styleable>

    <declare-styleable name="ColorTrackTextView">
        <attr name="originColor" format="color"></attr>
        <attr name="changeColor" format="color"></attr>
    </declare-styleable>

    <declare-styleable name="ProgressBar">
        <attr name="outerBackgroundColor" format="color"></attr>
        <attr name="innerBackgroundColor" format="color"></attr>
        <attr name="progressBorderWidth" format="dimension"></attr>
        <attr name="progressTextSize" format="dimension"></attr>
        <attr name="progressTextColor" format="color"></attr>
    </declare-styleable>
    
    <declare-styleable name="RatingBar">
        <attr name="startNormal" format="reference"></attr>
        <attr name="startFocus" format="reference"></attr>
        <attr name="gradeNumber" format="integer"></attr>
    </declare-styleable>

    <!--侧滑后menu的宽度-->
    <declare-styleable name="DrawLayout">
        <attr name="menuWidth" format="dimension"></attr>
    </declare-styleable>


    <!--圆形图片-->
    <declare-styleable name="RoundImageView">
        <attr name="borderRadius" format="dimension" />
        <attr name="type">
            <enum name="circle" value="0" />
            <enum name="round" value="1" />
        </attr>
    </declare-styleable>

    <!--签名画板-->
    <declare-styleable name="SignaturePad">
        <attr name="penMinWidth" format="dimension" />
        <attr name="penMaxWidth" format="dimension" />
        <attr name="penColor" format="color" />
        <attr name="velocityFilterWeight" format="float" />
        <attr name="clearOnDoubleClick" format="boolean"/>
    </declare-styleable>

    <!--自定义BannerView 属性-->
    <declare-styleable name="BannerView">
        <attr name="dotIndicatorFocus" format="color|reference"/>
        <attr name="dotIndicatorNormal" format="color|reference"></attr>
        <attr name="dotSize" format="dimension"></attr>
        <attr name="dotDistance" format="dimension"></attr>
        <attr name="dotGravity" format="enum">
            <enum name="center" value="0"></enum>
            <enum name="right" value="1"></enum>
            <enum name="left" value="-1"></enum>
        </attr>
        <attr name="bottomColor" format="color"></attr>
        <!--设置宽高比的参数-->
        <attr name="widthProportion" format="float"></attr>
        <attr name="hightProportion" format="float"></attr>
    </declare-styleable>

</resources>