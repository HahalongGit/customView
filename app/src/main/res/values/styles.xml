<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="NoAction" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="textAllCaps">false</item>
    </style>

    <declare-styleable name="core_area">
        <attr name="underline_color"
            format="color"/>
        <attr name="underline_selected_color"
            format="color"/>
        <attr name="hint_color"
            format="color"/>
        <attr name="text_color"
            format="color"/>
        <attr name="hint_text"
            format="string"/>
        <attr name="displaying_char"
            format="string"/>
        <attr name="codes"
            format="integer"/>
    </declare-styleable>


</resources>
