<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.lll.beizertest.activity.StatusBarActivity">

    <com.lll.beizertest.view.MyScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/iv_headImage"
                android:src="@color/progressBackground"
                android:layout_width="match_parent"
                android:layout_height="300dp" />

            <TextView
                android:text="这里是一个Text1"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="150dp" />

            <TextView
                android:text="这里是一个Text2"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="150dp" />

            <TextView
                android:text="这里是一个Text3"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="150dp" />

            <TextView
                android:text="这里是一个Text4"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="150dp" />

            <TextView
                android:text="这里是一个Text5"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="150dp" />

            <TextView
                android:text="这里是一个Text6"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="150dp" />

        </LinearLayout>

    </com.lll.beizertest.view.MyScrollView>

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolBarStartBar"
        android:layout_width="match_parent"
        android:gravity="center"
        android:alpha="0"
        android:background="@color/colorPrimary"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_titile"
            android:gravity="center"
            android:textColor="#ffffff"
            android:text="标题"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </android.support.v7.widget.Toolbar>

</RelativeLayout>
